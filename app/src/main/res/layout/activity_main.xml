<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageMotivational"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scaleType="fitXY"



        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-15dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/changePic"
        android:layout_width="59dp"
        android:layout_height="56dp"
        android:layout_marginTop="628dp"

        android:layout_marginEnd="176dp"


        android:background="@drawable/round_button"
        android:onClick="change"
        android:text="B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textMotivational"
        android:layout_width="350dp"
        android:layout_height="wrap_content"


        android:layout_marginEnd="28dp"
        android:layout_marginBottom="132dp"
        android:fontFamily="@font/varela_font"
        android:gravity="center"
        android:text="“The best time to plant a tree was 20 years ago. The second best time is now.”"
        android:textSize="40dp"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/changePic"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>